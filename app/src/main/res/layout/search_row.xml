<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:background="@drawable/search_bg"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+id/date"
            android:layout_height="wrap_content">

            <io.aequalis.lava.utils.SFNormalTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title ID :"
                android:textSize="@dimen/very_small_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/search_label" />

            <io.aequalis.lava.utils.SFNormalTextview
                android:id="@+id/title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kasjn"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/very_small_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/search_value" />

        </TableRow>

        <io.aequalis.lava.utils.SFNormalTextview
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_gravity="end"
            android:gravity="end"
            android:padding="5dp"
            android:alpha="0.7"
            android:layout_alignParentEnd="true"
            android:text="jhdfiu"
            android:textSize="@dimen/very_very_small_text"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/black"
        android:alpha="0.1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">


        <TableRow
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <io.aequalis.lava.utils.SFNormalTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcel ID :"
                android:textSize="@dimen/very_small_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/search_label" />

            <io.aequalis.lava.utils.SFNormalTextview
                android:id="@+id/parcel_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kasjn"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/very_small_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/search_value" />

        </TableRow>

        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/black"
            android:alpha="0.1"/>

        <TableRow
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <io.aequalis.lava.utils.SFNormalTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan ID :"
                android:textSize="@dimen/very_small_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/search_label" />

            <io.aequalis.lava.utils.SFNormalTextview
                android:id="@+id/plan_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kasjn"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/very_small_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/search_value" />

        </TableRow>





    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/black"
        android:alpha="0.1"/>

    <TableRow
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <io.aequalis.lava.utils.SFNormalTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address :"
            android:textSize="@dimen/very_small_medium_text"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/search_label" />

        <io.aequalis.lava.utils.SFNormalTextview
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kasjn"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/very_small_text"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/search_value" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <io.aequalis.lava.utils.SFNormalTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner :"
            android:textSize="@dimen/very_small_medium_text"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/search_label" />

        <io.aequalis.lava.utils.SFNormalTextview
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kasjn"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/very_small_text"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/search_value" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <io.aequalis.lava.utils.SFNormalTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rightholder :"
            android:textSize="@dimen/very_small_medium_text"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/search_label" />

        <io.aequalis.lava.utils.SFNormalTextview
            android:id="@+id/right_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kasjn"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/very_small_text"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/search_value" />

    </TableRow>


</LinearLayout>
