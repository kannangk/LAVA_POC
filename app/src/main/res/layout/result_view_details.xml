<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/result_view_bg"
        android:orientation="vertical">
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TableRow
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content">

            <io.aequalis.lava.utils.SFNormalTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title ID  "
                android:textSize="@dimen/very_small_medium_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/search_label" />

            <io.aequalis.lava.utils.SFNormalTextview
                android:id="@+id/title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kasjn"
                android:textSize="@dimen/very_small_medium_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/blue_txt" />

        </TableRow>
        <io.aequalis.lava.utils.SFNormalTextview
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:layout_gravity="end"
            android:gravity="end"
            android:padding="5dp"
            android:text="jhdfiu"
            android:textSize="@dimen/very_very_small_text"/>
 </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/result_view_inner_bg"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:padding="5dp"
                android:weightSum="5"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <io.aequalis.lava.utils.SFNormalTextview
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Parent Title ID"
                    android:layout_weight="2"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/black" />

                <io.aequalis.lava.utils.SFNormalTextview
                    android:id="@+id/parent_id"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="kasjn"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/result_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:padding="5dp"
                android:weightSum="5"
                android:background="#F7FAFF"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <io.aequalis.lava.utils.SFNormalTextview
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Created"
                    android:layout_weight="2"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/black" />

                <io.aequalis.lava.utils.SFNormalTextview
                    android:id="@+id/created_date"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="kasjn"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/result_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:padding="5dp"
                android:weightSum="5"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <io.aequalis.lava.utils.SFNormalTextview
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Modified"
                    android:layout_weight="2"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/black" />

                <io.aequalis.lava.utils.SFNormalTextview
                    android:id="@+id/modified_date"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="kasjn"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/result_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:padding="5dp"
                android:weightSum="5"
                android:background="#F7FAFF"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <io.aequalis.lava.utils.SFNormalTextview
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cancelled"
                    android:layout_weight="2"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/black" />

                <io.aequalis.lava.utils.SFNormalTextview
                    android:id="@+id/cancelled"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="kasjn"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/result_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:padding="5dp"
                android:weightSum="5"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <io.aequalis.lava.utils.SFNormalTextview
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:layout_weight="2"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/black" />

                <io.aequalis.lava.utils.SFNormalTextview
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="kasjn"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/result_value" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:padding="5dp"
                android:weightSum="5"
                android:background="#F7FAFF"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <io.aequalis.lava.utils.SFNormalTextview
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Legal Framework"
                    android:layout_weight="2"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/black" />

                <io.aequalis.lava.utils.SFNormalTextview
                    android:id="@+id/legal"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="kasjn"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/very_small_medium_text"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/result_value" />

            </TableRow>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>